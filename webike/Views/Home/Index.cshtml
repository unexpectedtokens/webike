@model webike.ViewModels.HomeViewModel

<div class="container">
    <h3>Opkomende events</h3>
    <div>
        <div class="flexbox-container homePageContainer">
            @foreach (var item in Model.Events)
            {
                <div class="flexbox-item flexbox-item-event">@item.Title</div>    
            }
         
        </div>
        <ul>
            <li><a asp-controller="Event" asp-action="Index">Meer events</a></li>
        </ul>

    </div>

</div>

<div class="container">
    <h3>Uitgelichte trainingen</h3>
    <div>
        <div class="flexbox-container homePageContainer">
             @foreach (var item in Model.Workouts)
            {
                <div class="flexbox-item flexbox-item-training">@item.Title</div>    
            }
            
        </div>
        <ul>
            <li><a asp-controller="Excercise" asp-action="Index">Meer trainingen</a></li>
        </ul>

    </div>

</div>


<div class="container">
    <h3>Uitgelichte routes</h3>
    <div>
        <div class="flexbox-container homePageContainer">
             @foreach (var item in Model.Routes)
            {
                <div class="flexbox-item flexbox-item-training">@item.Title</div>    
            }
            
        </div>
        <ul>
            <li><a asp-controller="Route" asp-action="Index">Meer routes</a></li>
        </ul>

    </div>

</div>
