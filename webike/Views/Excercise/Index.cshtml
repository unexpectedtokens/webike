@model IEnumerable<webike.Models.Excercise>

@{
    ViewData["Title"] = "Index";
}

<div class="flexbox-container flexbox-containerLanding">

        <div class="flexbox-item flexbox-itemLanding1">
            <h1 class="display-4">Oefeningen</h1>

        </div>

    </div>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<div class="flexbox-container">
<div class="flexbox-containerEvent">
       
    @foreach (var item in Model) {
            <a href="Excercise/Details/@item.ExcerciseID" class="flexbox-item flexbox-itemEvent2 card">
                <button type="button" class="btn btn-link">@item.Title</button>
            </a>
    }
</div>

<div>
 <div class="flexbox-item flexbox-itemEvent5">
            <select name="filterDropDown" id="filterDropDown">
                <option value="All">Alle oefeningen</option>
                <option value="Friends">Oefeningen van vrienden</option>
            </select>
        </div>

      <div class="flexbox-item flexbox-itemEvent5">
            <a asp-controller="Excercise" asp-action="Create" class="btn btn-light">Toevoegen oefening</a>
        </div>
</div>
</div>